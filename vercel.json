{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "ui/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "ui/$1"
    }
  ],
  "env": {
    "GOOGLE_API_KEY": "@google_api_key",
    "OPENAI_API_KEY": "@openai_api_key",
    "NEXT_PUBLIC_API_URL": "/api"
  }
}
